#:kivy 1.9.1
<PopupWindow>:
    BoxLayout:
        orientation:"vertical"

        Label:
            text:"Welcome to STRV!"
            size_hint_y:.2
            font_size: sp(25)
        ScrollView:
            Label:    
                size: self.texture_size  
                size_hint: None, None
                pos_hint:{"center_x":.5}
                text: " Before we can begin tracking your productive days you need\n tell us which apps to track.To do this please create two txt file\n and place them in the same directory as this python file\n \n      Naming is Important\n\n -Please name the first file aal.txt (Acceptable Application List)\n and place all of the app names you want us to track\n\n -For the next file please name it prod_app.txt (Productive\n Application List) and place all of the app names you deem \n as productive.\n\n You find that these files are probably already created with \n a suggested list of application but every list should be\n different based on the users needs\n\n One you've done that, restart the application and you're ready\n to start tracking!\n\n -Launch the App and press 'To More Productive Days'\n\n -Once in the main dashboard click the Green 'Start' button in\n the upper right hand cornert\n\n\n And thats it, your stats will start flowing in\n\n"
        

<StartUpWindow>:
    name: "start"

    canvas: 

    FloatLayout: 
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "data/background.png"
        
        BoxLayout:
            orientation: "vertical"


            Image: 
                source: 'data/STRV_Logo.png'
        
            FloatLayout: 
            
                BoxLayout:
                    orientation: "vertical"
                    padding_top: .3
                    size_hint_y: .3
                    size_hint_x: .7
                    pos_hint: { "center_y":0.5, "center_x":.5}
                    Button: 
                        background_color: 1, .57, .3, .5
                        text:"To More Productive Days!"
                        on_release: root.continueBtn()
                        background_normal: ''

                    Button:
                        text: 'How to Get Started'
                        background_color: .55, .32, 1, .5 
                        on_release: root.howToButton()
                        background_normal: ''

<MainWindow>:
    name: "main"
    #Charts
    label: pieSpace
    label: bar 

    #Data 
    label: start
    label: prod 
    label: unPro
    label: date 
    label: timeCollected 
    label: lasTime
    label: percentProductive 


    FloatLayout: 
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "data/background1.png"


        FloatLayout: 
            Button: 
                text: "Menu" 
                size_hint_y: .1
                size_hint_x: .1
                pos_hint: {"top":1, "x":0 }
                on_release: root.menuButton()
                
            Button: 
                id: start
                text: "Start" 
                background_color: 0,1,0,1
                size_hint_y: .092
                size_hint_x: .1
                on_release: root.startButton()
                pos_hint: {"top":1, "x":.9 }

            Label:
                text:"Productivity Analysis"
                size_hint_y: .1
                font_size: sp(30)
                font_name: 'Arial'
                pos_hint: { "top":1, "center_x":.5}

            BoxLayout:
                orientation: "vertical"

                FloatLayout:
                    size_hint_y: .1
                    pos_hint: { "top":0, "center_x":.5}

                    
                
                BoxLayout:
                    orientation: "horizontal"

                    BoxLayout:
                        orientation: "vertical" 

                        GridLayout: 
                            cols: 1 
                            rows: 1 
                            id: pieSpace
                            pos_hint: { "center_x": .5}
                        
                        Label:
                            text: "Productive Time Spent"
                            size_hint_y:.1 
                            font_size: sp(15)
                            bold: True 
                            underline: True 
                            color: 0,0,0, .8


                        ScrollView: 
                            do_scroll_x: False 
                            do_scroll_y: True 
                            size_hint_y:.4 
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint_y: .8 
                                id: prod 
                                      
                        Label:
                            text: "Unproductive Time Spent"
                            size_hint_y:.1 
                            underline: True 
                            font_size: sp(15)
                            bold: True 
                            color: 0,0,0, .8 


                        ScrollView:
                            do_scroll_x: False 
                            do_scroll_y: True 
                            size_hint_y:.4  
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint_y: .8 
                                id: unPro
                               
                    BoxLayout:
                        orientation: "vertical" 
                        
                        Label: 
                            size_hint_y:.1
                        Label: 
                            id: date 
                            text: 'Wednesday April 22, 2020'
                            color: 0,0,0,.6
                            bold: True
                            size_hint_y: .2
                            font_size: sp(25)

                        Label:
                            id: timeCollected
                            text: "Time Collected: 03:07:56" 
                            color: 0,0,0,1
                            size_hint_y: .1
                        
                        Label:
                            id: lastTime
                            text: "Last Collected: 13:46:43" 
                            color: 0,0,0,1
                            size_hint_y: .1

                        Label:
                            id: percentProductive
                            text: "Productivity: 56%" 
                            bold: True 
                            color: 0,0,0,1
                            size_hint_y: .1
                        Button:
                            text: "Share On Slack"
                            background_color: 0,1,0, .76
                            pos_hint: { "center_x": .5}
                            size_hint_x: .4
                            size_hint_y: .1 
                            on_release: root.shareButton()


                        Label: 
                            size_hint_y: .1

                        BoxLayout:
                            orientation: "vertical"
                            id: bar 
                        

                        
                                    

                            
                    
                    